{
  "extends": "tsconfig/express.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "types": ["node", "express"],
    "lib": ["es2022", "dom"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "./src/**/*.spec.ts", "./src/**/*.test.ts"],
  "include": ["./src/**/*.ts"]
}
