{
  "extends": "./base.json",
  "compilerOptions": {
    "importHelpers":false,
    "esModuleInterop": true,
    "module": "commonjs",
    "types": ["node"],
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
